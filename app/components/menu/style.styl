header
  margin 24px 8px 0

  nav
    ul
      list-style none

      &.top-menu
        display flex
        justify-content space-between
        padding 0

        li.open-menu
          cursor pointer

  .menu
    position fixed
    bottom -300px
    left 0
    height 300px
    background white
    transition all 0.3s
    width 100%
    overflow auto
    z-index 2

    &.in
      bottom 0px
