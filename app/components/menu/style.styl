$grey-border = #e3e9f2
$red = #d55b4e

header
  width 100%
  position fixed
  top 0
  left 0
  z-index 2
  padding 16px 16px 0
  margin-bottom 16px
  background white

  &.menu-map
    background linear-gradient(white, transparent)

    nav
      ul.top-menu
        justify-content flex-end

        li
          &:first-child
            display none

  nav
    ul
      list-style none
      padding 0

      &.top-menu
        display flex
        justify-content space-between
        padding 0

        li.open-menu
          cursor pointer

  .menu
    position fixed
    bottom -300px
    left 0
    height 300px
    background white
    transition all 0.3s
    width 100%
    overflow auto
    z-index 2
    padding 0

    &.in
      bottom 0px

    ul
      padding 0

      &.stations
        .title
          width 100%

      li
        display flex
        border-bottom 1px solid $grey-border
        padding 10px 16px
        font-size 13px

        &.checked i
          color $red

        i
          margin-top 20px
          color $grey-border

        p
          margin 10px

          &.city
            margin-bottom 0
            font-size 11px

        img
          width 50px
          height 50px
          border-radius 3px
